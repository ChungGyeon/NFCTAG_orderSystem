<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
  <style>
    .menu-item {
      display: inline-block;
      text-align: center;
      margin: 15px;
    }
    .menu-item img {
      width: 150px;
      height: 150px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>Menu</h1>
  <div>
    <% items.forEach(item => { %>
      <div class="menu-item">
        <h2><%= item.name %></h2>
        <img src="<%= item.image_url %>" alt="<%= item.name %>">
        <p>Price: $<%= item.price %></p>
        <p><%= item.description %></p>
      </div>
    <% }) %>
  </div>
</body>
</html>