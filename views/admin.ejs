<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Add Menu Item</title>
  <script src="test_js.js"></script>
  <link href="./allcss.css" rel="stylesheet">
</head>
<body>
  <div class="grid-container">
    <% items1.forEach(item => { %>
      <div class="menu_container" onclick="selectOp(<%= item.id %>)">
        <p><%= item.id %></p>
        <h2><%= item.name %></h2>
        <img src="<%= item.image_url %>" alt="<%= item.name %>">
        <p>Price: $<%= item.price %></p>
        <p><%= item.description %></p>
      </div>
    <% }) %>
  </div>
  <div>
  <h1>메뉴 추가</h1>
  <form action="/admin_adTomenu" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required><br>
    <label for="image_url">Image URL:</label>
    <input type="text" id="image_url" name="image_url" required><br>
    <label for="price">Price:</label>
    <input type="number" id="price" name="price" step="0.01" required><br>
    <label for="description">Description:</label>
    <textarea id="description" name="description" required></textarea><br>
    <button type="submit">Add Item</button>
  </form>
  <form action="/admin_addel" method="POST">
    <label for="id">Id:</label>
    <input type="text" id="id" name="id" required><br>
    <button type="submit">Delete Item</button>
  </form>
</div>
</body>
</html>